    "print(\"EJERCICIO 3\\n\")\n",
    "try:\n",
    "    texto, salida = leer_fichero()\n",
    "    eliminar_separadores(texto)\n",
    "    dic = llenar_diccionario(texto)\n",
    "    escribir_fichero(salida, dic)\n",
    "except:\n",
    "    print(\"Los ficheros proporcionados no son validos\")"

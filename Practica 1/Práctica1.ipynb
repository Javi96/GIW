    "print(\"EJERCICIO 2\\n\")\n",
    "texto, desplazamiento_letras, desplazamiento_palabras = pedir_datos()\n",
    "texto = cifrar_cadena(desplazamiento_letras,texto).split() \n",
    "print (desplazar_cadena(desplazamiento_palabras, texto).lower())"
